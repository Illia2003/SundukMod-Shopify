<!doctype html>
<html lang="ru">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">

    {% style %}

      @font-face {
        font-family: "Playfair Display";
        font-weight: 400;
        font-style: normal;
        font-display: swap;
        src: url("{{ 'PlayfairDisplay-Regular.woff2' | asset_url }}") format("woff2"), url("{{ 'PlayfairDisplay-Regular.woff' | asset_url }}") format("woff"), url("{{ 'PlayfairDisplay-Regular.eot' | asset_url }}") format("embedded-opentype"), url("{{ 'PlayfairDisplay-Regular.otf' | asset_url }}") format("opentype"), url("{{ 'PlayfairDisplay-Regular.ttf' | asset_url }}") format("truetype");
      }

      @font-face {
        font-family: "Montserrat";
        font-weight: 400;
        font-style: normal;
        font-display: swap;
        src: url("{{ 'Montserrat-Regular.woff2' | asset_url }}") format("woff2"), url("{{ 'Montserrat-Regular.woff' | asset_url }}") format("woff"), url("{{ 'Montserrat-Regular.eot' | asset_url }}") format("embedded-opentype"), url("{{ 'Montserrat-Regular.otf' | asset_url }}") format("opentype"), url("{{ 'Montserrat-Regular.ttf' | asset_url }}") format("truetype");
      }
    {% endstyle %}

    <link rel="stylesheet" href="{{ 'base.css' | asset_url }}">
    <link rel="stylesheet" href="{{ 'normalize.css' | asset_url }}">

    {{ content_for_header }}
  </head>
  <body>
    {% section "header" %}

    {{ content_for_layout }}

    {% section "footer" %}

    <script
      defer
      type="module"
      src="{{ 'swiper.js' | asset_url }}"></script>
  </body>
</html>