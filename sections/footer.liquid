{% schema %}
  {
    "name": "Footer",
    "templates": ["index"],
    "tag": "footer",
    "class": "footer",
    "settings": [
      {
        "type": "image_picker",
        "id": "footer_logo",
        "label": "Footer Logo"
      },
      {
        "type": "text",
        "id": "phone_number",
        "label": "Phone Number"
      },
      {
        "type": "text",
        "id": "email",
        "label": "Email"
      },
      {
        "type": "link_list",
        "id": "menu_pages",
        "label": "Menu Pages"
      }, {
        "type": "html",
        "id": "address",
        "label": "Address"
      }, {
        "type": "html",
        "id": "schedule",
        "label": "Schedule"
      }, {
        "type": "image_picker",
        "id": "payment_methods",
        "label": "Payment methods"
      }
    ]
  }
{% endschema %}

<link rel="stylesheet" href="{{ 'footer.css' | asset_url }}">

<div class="footer__container section__container">
  <div class="footer__wrapper section__wrapper section__wrapper--column">
    <div class="footer__top">
      <div class="footer__left">
        <div class="footer__logo">
          {{ section.settings.footer_logo | image_url: width: 244 | image_tag: height: 124 }}
        </div>
        <ul class="footer__social-media list social-media">
          {% if section.settings.social_instagram_link != "" %}
            <li class="social-media__item">
              <a href="{{ section.settings.social_instagram_link }}" class="social-media__link">{% render 'icon-instagram', width: 22, height: 22 %}</a>
            </li>
          {% endif %}

          {% if section.settings.social_facebook_link != "" %}
            <li class="social-media__item">
              <a href="{{ section.settings.social_facebook_link }}" class="social-media__link">{% render 'icon-facebook', width: 10, height: 21 %}</a>
            </li>
          {% endif %}
        </ul>
      </div>
      <div class="footer__right">
        <div class="footer__contact">
          {% if section.settings.phone_number != "" %}
            <div class="footer__phone-number">
              <a class="phone-number__link heading-3" href="tel:{{ section.settings.phone_number | remove: " " | remove: '(' | remove: ')' }}">{{ section.settings.phone_number }}</a>
            </div>
          {% endif %}

          {% if section.settings.email != "" %}
            <div class="footer__email">
              <a class="email__link heading-3" href="mailto:{{ section.settings.email }}">{{ section.settings.email }}</a>
            </div>
          {% endif %}
        </div>
        <div class="footer__additional-info">
          <div class="info__block">
